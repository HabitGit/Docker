FROM python:3 # говорим что будем устанавливать питон и его версию
WORKDIR /usr/src/app # рабочая директория в которой будет находиться питон
COPY requirements.txt ./ # тут мы указываем, что будем брать файл "его имя" и копировать в папку: в данном случае указана текущая папка рабочей директории (выше) (не забыть создать в ручную этот файл)
RUN pip install -r requirements.txt # тут мы говорим что мы будем выполнять команду установки, далее мы указываем что мы будем брать все те библиотеки которые описаны в файле "его имя" и их устанавливаем.